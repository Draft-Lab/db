{
	"name": "@draftlab/db",
	"version": "0.12.1",
	"type": "module",
	"description": "Core implementation for @draftlab/db",
	"author": "Matheus Pergoli",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/Draft-Lab/db.git"
	},
	"bugs": {
		"url": "https://github.com/Draft-Lab/db/issues"
	},
	"homepage": "https://github.com/Draft-Lab/db",
	"keywords": [
		"local-first",
		"sqlite",
		"wasm",
		"database",
		"draftlab",
		"typescript"
	],
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"clean": "rm -rf dist .turbo node_modules",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false"
	},
	"devDependencies": {
		"@draftlab/tsconfig": "workspace:*",
		"@types/node": "^24.10.0",
		"drizzle-orm": "^0.44.7",
		"kysely": "^0.28.8",
		"tsdown": "^0.16.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@sqlite.org/sqlite-wasm": "3.50.4-build1"
	},
	"peerDependencies": {
		"drizzle-orm": "*",
		"kysely": "*"
	},
	"peerDependenciesMeta": {
		"kysely": {
			"optional": true
		},
		"drizzle-orm": {
			"optional": true
		}
	},
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	}
}
