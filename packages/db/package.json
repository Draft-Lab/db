{
	"name": "@draftlab/db",
	"version": "0.15.1",
	"type": "module",
	"description": "Core implementation for @draftlab/db",
	"author": "Matheus Pergoli",
	"main": "dist/index.mjs",
	"typings": "dist/index.d.mts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.mts"
		},
		"./vite": {
			"import": "./dist/vite.mjs",
			"types": "./dist/vite.d.mts"
		},
		"./kysely": {
			"import": "./dist/kysely.mjs",
			"types": "./dist/kysely.d.mts"
		},
		"./drizzle": {
			"import": "./dist/drizzle.mjs",
			"types": "./dist/drizzle.d.mts"
		}
	},
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/Draft-Lab/db.git"
	},
	"bugs": {
		"url": "https://github.com/Draft-Lab/db/issues"
	},
	"homepage": "https://github.com/Draft-Lab/db",
	"keywords": [
		"local-first",
		"sqlite",
		"wasm",
		"database",
		"draftlab",
		"typescript"
	],
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"clean": "rm -rf dist .turbo node_modules",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false"
	},
	"devDependencies": {
		"@draftlab/tsconfig": "workspace:*",
		"@types/node": "^24.10.0",
		"drizzle-orm": "^0.44.7",
		"kysely": "^0.28.8",
		"tsdown": "^0.16.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@sqlite.org/sqlite-wasm": "3.51.0-build1"
	},
	"peerDependencies": {
		"drizzle-orm": "*",
		"kysely": "*",
		"vite": ">=4.0.0"
	},
	"peerDependenciesMeta": {
		"vite": {
			"optional": true
		},
		"kysely": {
			"optional": true
		},
		"drizzle-orm": {
			"optional": true
		}
	},
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	}
}
